# Voice AI Agents Platform - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Google Gemini API Key
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Database Configuration - SUPABASE RECOMMENDED
# =============================================================================
# Supabase PostgreSQL (RECOMMENDED for production):
# Get this from your Supabase project settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# Alternative: SQLite for local development only
# DATABASE_URL=sqlite:///./voice_ai.db

# Local PostgreSQL (if not using Supabase):
# DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai_db

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, test, or production
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Frontend Configuration
# =============================================================================
# Next.js Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Optional: Logging and Debugging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable SQL query logging (echo)
SQL_ECHO=false

# =============================================================================
# Optional: Production Settings
# =============================================================================
# Secret key for sessions (generate with: openssl rand -hex 32)
# SECRET_KEY=your_secret_key_here

# Enable production mode
# PRODUCTION=true

